CLASS OF DIE



package die;

public class DieRoll {

 private int d4;
 private int d6;
 private int d8;
 private int d10;
 private int d12;
 private int d20;
 private int d100;
 
 public DieRoll(){
   roll();
}
 public void roll(){
     d4 = (int)(Math.random()*4)+1;
     d6 = (int)(Math.random()*6)+1;
     d8 = (int)(Math.random()*8)+1;
     d10= (int)(Math.random()*10)+1;
     d12= (int)(Math.random()*12)+1;
     d20= (int)(Math.random()*20)+1;
     d100= (int)(Math.random()*100)+1;
 
 }
 public int getDie4(){
        return d4;
 }
 
 public int getDie6(){
        return d6;
 }
 
 public int getDie8(){
        return d8;
 }
 
 public int getDie10(){
        return d10;
 }
 public int getDie12(){
        return d12;
 }
 public int getDie20(){
        return d20;
 }
 public int getDie100(){
        return d100;
 }
}
